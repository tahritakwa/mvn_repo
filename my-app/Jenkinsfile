pipeline {
  agent none
  environment {
		DOCKERHUB_CREDENTIALS=credentials('DockerHub')
	}
  stages {
    stage('Maven Install') {
      agent {
        docker {
          image 'maven:3.8.4'
        }
      }
      steps {
        sh 'mvn clean install'
      }
    }
   stage('Docker Build') {
     agent any
       steps {
         sh 'docker build -t mvn_image .'
      }
    }
   stage('Docker Push') {
      agent any
      steps {
        sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
        sh 'docker push takwa99/mvn_image:latest'
        }
      }
    }
}
