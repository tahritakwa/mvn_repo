pipeline {
  agent none
  stages {
    stage('Maven Install') {
      agent {
        docker {
          image 'maven:3.8.4'
        }
      }
      steps {
        sh 'mvn clean install'
      }
    }
   stage('Docker Build') {
     agent any
       steps {
         sh 'docker build -t mvn_image .'
      }
    }
   stage('Docker Push') {
      agent any
      steps {
        withCredentials([usernamePassword(credentialsId: 'DockerHub', passwordVariable: 'After2021', usernameVariable: 'takwa99')]) {
          sh "docker login -u ${env.takwa99} -p ${env.After2021}"
          sh 'docker push mvn_image'
        }
      }
    }
  }
}
