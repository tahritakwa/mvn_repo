pipeline {
  environment {
    DOCKERHUB_CREDENTIALS=credentials('DockerHub')
      }
  agent none
  stages {
    stage('Maven Install') {
      agent {
        docker {
          image 'maven:3.8.4'
        }
      }
      steps {
        sh 'mvn clean install'
      }
    }
   stage('Docker Build') {
     agent any
       steps {
         sh 'docker build -f Dockerfile -t mvn_image:latest .'
      }
    }
   stage('Login') {
     agent any
       steps {
         sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
	}
       }

   stage('Push') {
     agent any
       steps {
         sh 'docker tag mvn_image takwa99/mvn_image'
         sh 'docker push takwa99/mvn_image:latest'
                 }
          }
   stage('Deploy to k8s') {
     agent any
       steps{
         sshagent(['k8s']) {
            sh "scp -o StrictHostKeyChecking=no node-deployment.yaml ubuntu@192.168.137.189:/home/sparkit/mvn_repo/my_app"
            script {
                try{
                    sh "ssh ubuntu@192.168.137.189 kubectl create -f ."
                }catch(error){
                    sh "ssh ubuntu@192.168.137.189 kubectl create -f ."
            }
}
        }
         }
    
	}
}
}
