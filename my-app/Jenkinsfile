pipeline {
  environment {
    DOCKERHUB_CREDENTIALS=credentials('DockerHub')
      }
  agent none
  stages {
    stage('Maven Install') {
      agent {
        docker {
          image 'maven:3.8.4'
        }
      }
      steps {
        sh 'mvn clean install'
      }
    }
   stage('Docker Build') {
     agent any
       steps {
         sh 'docker build -t mvn_image:latest .'
      }
    }
   stage('Login') {
     agent any
       steps {
	 sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}

   stage('Push') {
     agent any
       steps {
         sh 'docker push mvn_image:latest'
			}
		}
 }
}
